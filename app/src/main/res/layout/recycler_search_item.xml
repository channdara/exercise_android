<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_line_bottom"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_marginEnd="4dp"
        android:clipChildren="true"
        app:cardCornerRadius="6dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/splash_background" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/shop_item_shop_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:textSize="7pt"
                tools:text="Shop Name" />

            <TextView
                android:id="@+id/shop_item_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_line"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:textSize="5pt"
                tools:text="0.0 km" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <RatingBar
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/shop_item_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="0.0" />

            <View
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:layout_marginHorizontal="8dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/shop_item_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                app:drawableStartCompat="@drawable/ic_view"
                tools:text="00 Views" />

        </TableRow>

        <TextView
            android:id="@+id/shop_item_rating_and_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rating and Review" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/shop_item_shop_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:textSize="5pt"
                app:drawableStartCompat="@drawable/ic_restaurant_gray"
                tools:text="Shop Type" />

            <View
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:layout_marginHorizontal="8dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/shop_item_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:textSize="5pt"
                app:drawableStartCompat="@drawable/ic_location_on_gray"
                tools:text="Location" />

            <TextView
                android:id="@+id/shop_item_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@android:color/holo_green_light"
                tools:text="Open Now" />

        </TableRow>

    </LinearLayout>

</TableRow>